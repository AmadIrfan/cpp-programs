    cout << "                          Enter Your Password  :-                                          " << endl;
    cin >> password;
    if ((username == "pakistan" || username == "pakistan") && (password == "zindabad" || password == "ZINDABAD"))
    {
        officer_running = true;
    }
    else
    {
        officer_running = false;
    }

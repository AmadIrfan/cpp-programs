}
void Total_marks(int idx, int marks_interview[], int marks_in_medical[], int marks_test[])
{
    total_marks = marks_interview[idx] + marks_in_medical[idx] + marks_test[idx];
    cout << "   You have obtained marks  =  " << total_marks << endl;
}
